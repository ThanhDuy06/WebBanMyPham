@model WebBanMyPham.Models.product

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}
@section _Header {
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
}
<div class="container-fluid">

    <!-- Page Heading -->
    <h1>Chi tiết sản phẩm</h1>

    <!-- Content Row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-red">
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>
                            Loại sản phẩm
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.category.name)
                        </dd>
                        <dt>
                            Tên
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.name)
                        </dd>

                        <dt>
                            Giá
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.price)
                        </dd>

                        <dt>
                            Mô tả
                        </dt>

                        <dd>
                            @Html.Raw(Model.detail)
                        </dd>

                        <dt>
                            Hình ảnh
                        </dt>

                        <dd>
                            <img src="~/Content/upload/img/product/@Model.img" width="200px" />
                        </dd>

                        <dt>
                            Liên kết
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.link)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.meta)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.meta)
                        </dd>

                        <dt>
                            Hiển thị
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.hide)
                        </dd>

                        <dt>
                            Vị trí
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.order)
                        </dd>

                        <dt>
                            Ngày đăng
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.date_begin)
                        </dd>

                        @*                        <dt>
            @Html.DisplayNameFor(model => model.date_update)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.date_update)
        </dd>*@



                    </dl>

                    <div class="form-actions no-color">
                        @Html.ActionLink("Sửa", "Edit", new { id = Model.id }, new { @class = "btn btn-success" }) |
                        @Html.ActionLink("Quay lại", "Index","", new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>