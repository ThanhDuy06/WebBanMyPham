@model IEnumerable<WebBanMyPham.Models.category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}

@section _Header {
    <link href="@Url.Content("~/Areas/admin/vendor/datatables/dataTables.bootstrap4.min.css")" rel="stylesheet" type="text/css" />
}
<div class="container-fluid">

    <!-- Page Heading -->
    <h1>Danh sách loại sản phẩm</h1>
    <p>
        @Html.ActionLink("Thêm mới", "Create", "", new { @class = "btn btn-primary" })
    </p>


    <!-- DataTales Example -->
    <div class="card shadow mb-4">

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                STT
                            </th>
                            <th>
                                Tên
                            </th>
                            <th>
                                Liên kết
                            </th>
                            <th>
                                Meta
                            </th>
                            <th>
                                Hiển thị
                            </th>
                            <th>
                                Vị trí
                            </th>
                            <th>
                                Ngày đăng
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{var Number = 1; }

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.Raw(Number++)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.link)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.meta)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.hide)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.order)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.datebegin)
                                </td>
                                <td>
                                    @Html.ActionLink("Sửa", "Edit", routeValues: new { id = item.id }, htmlAttributes: new { @class = "btn btn-success" })
                                    @Html.ActionLink("Chi tiết", "Details", routeValues: new { id = item.id }, htmlAttributes: new { @class = "btn btn-primary" })
                                    @Html.ActionLink("Xóa", "Delete", routeValues: new { id = item.id }, htmlAttributes: new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#dataTable').DataTable({
            responsive: true
        });
    });
</script>
